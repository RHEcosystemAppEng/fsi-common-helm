{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Schema pusher configuration values schema",
  "type":"object",
  "required": [
    "kafka",
    "service",
    "naming",
    "messages"
  ],
  "properties": {
    "kafka": {
      "type": "object",
      "description": "Kafka info",
      "required": [
        "bootstrap"
      ],
      "properties": {
        "bootstrap": {
          "type": "string",
          "description": "Bootstrap URL",
          "$ref": "#/$defs/url"
        },
        "properties": {
          "type": "array",
          "description": "Custom producer properties",
          "items": {
            "type": "object",
            "required": ["key", "value"],
            "properties": {
              "key": {
                "type": "string",
                "description": "Custom producer property key"
              },
              "value": {
                "type": ["string", "boolean", "integer"],
                "description": "Custom producedr property value"
              }
            }
          }
        },
        "certificates": {
          "type": "object",
          "description": "Certificates information",
          "oneOff": [
            {
              "required": [
                "server"
              ]
            },
            {
              "required": [
                "user"
              ]
            }
          ],
          "properties": {
            "server": {
              "type": "object",
              "description": "Server certificate information",
              "required": [
                "secret"
              ],
              "properties": {
                "secret": {
                  "type": "string",
                  "description": "The name of the secret containing the server p12 store"
                }
              }
            },
            "user": {
              "type": "object",
              "description": "User certificate information",
              "required": [
                "secret"
              ],
              "properties": {
                "secret": {
                  "type": "string",
                  "description": "The name of the secret containing the user p12 store"
                }
              }
            }
          }
        }
      }
    },
    "service": {
      "type": "object",
      "description": "Service registry info",
      "required": [
        "registry"
      ],
      "properties": {
        "registry": {
          "type": "string",
          "description": "Registry URL",
          "$ref": "#/$defs/url"
        }
      }
    },
    "naming": {
      "type": "object",
      "description": "Subject naming configuration",
      "required": [
        "strategy"
      ],
      "properties": {
        "strategy": {
          "type": "string",
          "description": "The selected naming strategy",
          "enum": ["topic", "record", "topic_record"]
        }
      }
    },
    "messages": {
      "type": "array",
      "description": "Information for constructing messages",
      "items": {
        "type": "object",
        "required": ["topic", "schema"],
        "properties": {
          "topic": {
            "type": "string",
            "description": "Topic to store the message in,"
          },
          "value": {
            "type": "string",
            "description": "Base64 reprenstation of the schema for the message",
            "contentEncoding": "base64",
            "contentMediaType": "application/gzip"
          }
        }
      }
    },
    "labels": {
      "type": "object",
      "description": "Labels for implementing with the created resources"
    },
    "props": {
      "type": "array",
      "description": "Custom producer properties",
      "items": {
        "type": "object",
        "required": ["key", "value"],
        "properties": {
          "key": {
            "type": "string",
            "description": "Custom producer property key"
          },
          "value": {
            "type": "string",
            "description": "Custom producedr property value"
          }
        }
      }
    }
  },
  "$defs": {
    "url": {
      "format": "uri",
      "pattern": "^https?://"
    }
  }
}
