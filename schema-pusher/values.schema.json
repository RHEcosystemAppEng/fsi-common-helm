{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Schema pusher configuration values schema",
  "type":"object",
  "required": [
    "kafka",
    "service",
    "naming",
    "topics",
    "encoded"
  ],
  "properties": {
    "kafka": {
      "type": "object",
      "description": "Kafka info",
      "required": [
        "bootstrap"
      ],
      "properties": {
        "bootstrap": {
          "type": "string",
          "description": "Bootstrap URL",
          "$ref": "#/$defs/url"
        },
        "certificate": {
          "type": "object",
          "description": "Certificate information",
          "required": [
            "secret"
          ],
          "properties": {
            "secret": {
              "type": "string",
              "description": "The name of the kafka cluster certificate secret with a ca.crt key in it"
            }
          }
        }
      }
    },
    "service": {
      "type": "object",
      "description": "Service registry info",
      "required": [
        "registry"
      ],
      "properties": {
        "registry": {
          "type": "string",
          "description": "Registry URL",
          "$ref": "#/$defs/url"
        }
      }
    },
    "naming": {
      "type": "object",
      "description": "Subject naming configuration",
      "required": [
        "strategy"
      ],
      "properties": {
        "strategy": {
          "type": "string",
          "description": "The selected naming strategy",
          "enum": ["topic", "record", "topic_record"]
        }
      }
    },
    "topics": {
      "anyOf": [
        {
          "type": "string",
          "description": "A Topic for pushing the messages with"
        },
        {
          "type": "array",
          "description": "A list of topics for pushing the messages with",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "encoded": {
      "type": "object",
      "description": "Base64 encoding info",
      "required": [
        "archive"
      ],
      "properties": {
        "archive": {
          "type": "string",
          "description": "A base64 representation a the tar.gz archive containing the schema files",
          "contentEncoding": "base64",
          "contentMediaType": "application/gzip"
        }
      }
    },
    "labels": {
      "type": "object",
      "description": "Labels for implementing with the created resources."
    }
  },
  "$defs": {
    "url": {
      "format": "uri",
      "pattern": "^https?://"
    }
  }
}
